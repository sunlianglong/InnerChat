<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">
    <RelativeLayout
        android:id="@+id/headTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/myBlue"
        android:layout_alignParentTop="true">
    </RelativeLayout>
    <ImageView
        android:id="@+id/friends_add"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:src="@drawable/add"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/headTitle" />
    <TextView
        android:id="@+id/friends_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="联系人"
        android:textColor="@color/myWhite"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/searchView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:text=""
        android:layout_below="@+id/headTitle"
        android:layout_alignParentStart="true"
        android:id="@+id/xxx"/>
    <Button
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/register_03"
        android:text="搜索"
        android:textColor="#6495ED"
        android:textSize="17dp"
        android:layout_below="@id/xxx"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="7dp"
        android:layout_below="@id/searchView"
        android:background="@color/myGray" />

    <ExpandableListView android:id="@+id/friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView">
    </ExpandableListView>

</RelativeLayout>
